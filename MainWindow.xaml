<Window x:Class="Szyfrowanie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szyfrowanie"
        mc:Ignorable="d"
        Title="Szyfrowanie. Wykonane przez Wiktor Lutowski" Height="500" Width="800"
        Background="CadetBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Label Foreground="AntiqueWhite" FontSize="20">Podaj wartość klucza</Label>
            <TextBox TextWrapping="Wrap" Name="keyTxtBox" Width="50" Margin="30"/>
            <Label Foreground="AntiqueWhite" FontSize="20">Podaj tekst</Label>
            <TextBox Height="250" Margin="20" AcceptsReturn="True" Name="textTxtBox" TextWrapping="Wrap"/>
        </StackPanel>
        <Button Padding="3" Background="LightBlue" Click="Button_Click_Encrypt" Grid.Column="1" Margin="0 100 0 0" Content="Zaszyfruj" VerticalAlignment="Center" HorizontalAlignment="Center" />

        <StackPanel Grid.Column="2">
            <Label Foreground="AntiqueWhite" FontSize="20">Tekst zaszyfrowany</Label>
            <Border BorderBrush="AntiqueWhite" Height="300" BorderThickness="3" CornerRadius="20" Margin="30">
                <TextBlock Foreground="White" Margin="20" Name="resultTxtBlock" TextWrapping="Wrap"/>
            </Border>
            <Button Background="LightBlue" Click="Button_Click_Save" Content="Zapisz szyfr w pliku" Height="auto" VerticalAlignment="Center" Padding="30 3" HorizontalAlignment="Center" />

        </StackPanel>
    </Grid>
</Window>
